<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/gmapbg">

    <Button
        android:id="@+id/create_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="@string/create_event" 
        android:onClick="createEvent"/>

    <Button
        android:id="@+id/serviceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listEvents"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:onClick="startStopService"
        android:text="@string/serviceButtontext" />

    <Button
        android:id="@+id/listEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:onClick="goToList"
        android:text="@string/listEventButtonText" />
    
</RelativeLayout>